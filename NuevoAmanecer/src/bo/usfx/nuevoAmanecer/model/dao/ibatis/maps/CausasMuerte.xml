	<!-- Edicion de la Clase Proceso -->

	<insert id="InsertarCausasMuerte" parameterClass="CausasMuerte">
		INSERT INTO causas_muerte( codigo_causa_muerte, nommbre_causa_muerte)
		VALUES(#codigo_causa_muerte#, #nommbre_causa_muerte#)
  </insert>

	<update id="ModificarCausasMuerte" parameterClass="CausasMuerte">
		UPDATE causas_muerte
		<dynamic prepend="SET">
			<isNotNull prepend="," property="nommbre_causa_muerte">nommbre_causa_muerte=#nommbre_causa_muerte#</isNotNull>
		</dynamic>
		WHERE codigo_causa_muerte = #codigo_causa_muerte#;
	</update>
	<delete id="EliminarCausasMuerte">
		DELETE FROM causas_muerte 
		WHERE codigo_causa_muerte = #codigo_causa_muerte#;
  </delete>
