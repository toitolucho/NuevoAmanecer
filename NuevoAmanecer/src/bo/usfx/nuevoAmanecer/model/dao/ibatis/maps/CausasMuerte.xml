<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">
<sqlMap namespace="CausasMuerte">

	<sql id="PropertiesCausasMuerte">
		SELECT codigo_causa_muerte, nommbre_causa_muerte
		FROM causas_muerte

  </sql>

	<select id="ObtenerCausasMuerte" resultClass="CausasMuerte">
		<include refid="PropertiesCausasMuerte" />
		<dynamic prepend="WHERE">
			<isNotNull property="codigo_causa_muerte">
				codigo_causa_muerte = #codigo_causa_muerte#
		</isNotNull>
		</dynamic>
		ORDER BY nommbre_causa_muerte ASC
	</select>

	<select id="VerificarIdCausasMuerte" resultClass="java.lang.Integer">
		SELECT count(codigo_causa_muerte)
		FROM causas_muerte
		WHERE codigo_causa_muerte = #codigo_causa_muerte#;
  </select>

