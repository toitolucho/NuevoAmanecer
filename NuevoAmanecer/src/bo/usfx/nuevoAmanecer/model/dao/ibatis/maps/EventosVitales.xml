<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">
<sqlMap namespace="EventosVitales">

	<sql id="PropertiesEventosVitales">
		SELECT codigo_evento_vital, nombre_evento_vital
		FROM eventos_vitales

  </sql>

	<select id="ObtenerEventosVitales" resultClass="EventosVitales">
		<include refid="PropertiesEventosVitales" />
		<dynamic prepend="WHERE">
			<isNotNull property="codigo_evento_vital">
				codigo_evento_vital = #codigo_evento_vital#
		</isNotNull>
		</dynamic>
		ORDER BY nombre_evento_vital ASC
	</select>

	<select id="VerificarIdEventosVitales" resultClass="java.lang.Integer">
		SELECT count(codigo_evento_vital)
		FROM eventos_vitales
		WHERE codigo_evento_vital = #codigo_evento_vital#;
  </select>

